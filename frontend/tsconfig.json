{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "es2020",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": false,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "importHelpers": true,
        "target": "es2015",
        "esModuleInterop": true,
        "lib": [
            "es2018",
            "dom"
        ]
    }
}
